<div class= 'login-form'>
  <h2>Sign In</h2>

  <% unless params.valid? %>
    <div class= "errors">
      <h4>There was a problem with sign up</h4>
      <ul>
        <% params.error_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <hr>

  <%=
    form_for :user, routes.sign_in_path, class: 'form-group' do
      div do
        label "Email"
        text_field :email, class: 'form-control'
      end

      div do
        label "Password"
        password_field :password, class: 'form-control'
      end

      submit 'Sign In', class: "btn btn-primary"
    end
  %>
</div>
